<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appveg.farmfamily">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.send.SuaDotSanLuongActivity"
            android:label="Sửa sản lượng"
            android:parentActivityName=".ui.send.ChiTietDotSanLuongActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.appveg.farmfamily.ui.send.SendFragment" />

        </activity>
        <activity
            android:name=".ui.send.ChiTietSanLuongRauActivity"
            android:label="Chi tiết sản lượng"
            android:parentActivityName=".ui.send.ChiTietDotSanLuongActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.appveg.farmfamily.ui.send.SendFragment" />
        </activity>
        <activity
            android:name=".ui.send.ThemDotSanLuong"
            android:label="Chi tiết sản lượng "
            android:parentActivityName=".ui.send.ChiTietDotSanLuongActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.appveg.farmfamily.ui.send.SendFragment" />
        </activity>
        <activity
            android:name=".ui.send.ChiTietDotSanLuongActivity"
            android:label="Danh sách đợt sản lượng"
            android:parentActivityName=".ui.send.ChiTietDotSanLuongActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.appveg.farmfamily.ui.send.SendFragment" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.login.SignUpActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.login.ForgotPPass"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>