<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appveg.farmfamily">
    <!-- Adding Read External Storage Permission usr pick img -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.slideshow.EditDeviceActivity"
            android:label="Sửa thiết bị"
            android:parentActivityName=".ui.slideshow.DeviceDetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.appveg.farmfamily.ui.slideshow.DeviceDetailActivity" /></activity>
        <activity
            android:name=".ui.slideshow.DeviceDetailActivity"
            android:label="Chi tiết thiết bị"
