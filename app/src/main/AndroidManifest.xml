                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.appveg.farmfamily.ui.gallery.ThemKhuVuonActivity" />
        </activity>
        <activity
            android:name=".ui.gallery.SuaKhuVuonActivity"
            android:label="Sửa khu vườn"
            android:parentActivityName=".ui.gallery.ThemKhuVuonActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.appveg.farmfamily.ui.gallery.ThemKhuVuonActivity" />
        </activity>
        <activity
            android:name=".ui.send.SuaDotSanLuongActivity"
            android:label="Sửa sản lượng"
            android:parentActivityName=".ui.send.ChiTietDotSanLuongActivity">
            <meta-data
