<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".ui.device.AddDeviceActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        >


        <EditText
            android:id="@+id/nameDevice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:background="@android:color/transparent"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="@string/name_device_vi"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/colorPrimary" />



        <EditText
            android:id="@+id/decript_device"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="@string/decription_device_vi"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/colorPrimary" />

        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="@string/choose_img_vi"
            android:padding="10dp"
            android:singleLine="true"
            android:textColorHint="@color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/colorPrimary" />




        <ProgressBar
            android:id="@+id/adddevice_progressbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"

            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/add_image1"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:padding="7dp"
                    android:src="@drawable/doph" />

                <!--    button to show picker diaglog-->

                <ImageView
                    android:id="@+id/add_image2"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:padding="7dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/dinhduong" />


                <ImageView
                    android:id="@+id/add_image3"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:padding="7dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/cambiennhietdo" />

                <ImageView
                    android:id="@+id/add_image9"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:padding="7dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/maybo2" />
            </TableRow>

            <ProgressBar
                android:id="@+id/addveg_progressbar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"

                />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/add_image4"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:padding="7dp"
                    android:src="@drawable/quat" />

                <!--    button to show picker diaglog-->

                <ImageView
                    android:id="@+id/add_image5"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:padding="7dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/cambienmua" />


                <ImageView
                    android:id="@+id/add_image6"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:padding="7dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/phunsuong2" />
                <ImageView
                    android:id="@+id/add_image8"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:padding="7dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/quat" />
            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/add_camera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_menu_camera" />

                <ImageView
                    android:id="@+id/add_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_menu_gallery" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <!--                <ImageView-->
                <!--                    android:id="@+id/photo_camera"-->
                <!--                    android:background="@null"-->
                <!--                    android:layout_width="150dp"-->
                <!--                    android:layout_height="150dp"-->
                <!--                    android:padding="10dp"-->
                <!--                    android:scaleType="centerInside"-->
                <!--                    android:src="@drawable/imagecamera" />-->

                <ImageView
                    android:id="@+id/selected_image"
                    android:background="@null"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/imagegallery" />
            </TableRow>
        </TableLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/btn_device_back"
            style="@style/Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_back"
            android:text="Trở về"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_device_add"
            style="@style/Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_add2"
            android:text="Thêm"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_device_save"
            style="@style/Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/btn_print"
            android:text="In"
            android:textColor="@android:color/white" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>