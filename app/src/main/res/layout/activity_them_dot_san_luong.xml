    <TableLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:stretchColumns="3">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày bắt đầu"/>
            <!--    button to show picker diaglog-->
            <Button
                android:id="@+id/pickDateBD"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_marginLeft="20dp"
                android:background="@drawable/ic_calendar" />

            <TextView
                android:layout_marginLeft="30dp"
                android:id="@+id/textViewPickStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày thu hoạch"/>
            <!--    button to show picker diaglog-->
            <Button
                android:id="@+id/pickDateKT"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_marginLeft="20dp"
                android:background="@drawable/ic_calendar" />

            <TextView
                android:layout_marginLeft="30dp"
                android:id="@+id/textViewPickKT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

    </TableLayout>

    <TableLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:stretchColumns="2">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng sản lượng (kg) "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="0kg"/>
            />

        </TableRow>

        <!--        List rau-->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn tên rau"
                />
            <!-- static -->
            <Spinner
                android:id="@+id/positionSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:spinnerMode="dialog" />
        </TableRow>



        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhâp số sản lượng"
                />

            <EditText
                android:id="@+id/nhapSoLuongRau"
                android:layout_width="wrap_content"
                android:focusable="true"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <Button
                android:id="@+id/addSoSL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="add"
                />

        </TableRow>

    </TableLayout>

